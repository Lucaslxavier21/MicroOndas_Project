@model IEnumerable<ProgramaModel>

@{
    ViewBag.Title = "Micro-ondas Digital";
}

<h2>Micro-ondas Digital</h2>
<br />
<div class="form-group">
    <label for="programaPreDefinido">Programa:</label>
    <select id="programaPreDefinido" class="form-control" onchange="carregarProgramaPreDefinido()">
        <option value="">Selecione um programa</option>
        @if (Model != null)
        {
            @foreach (var programa in Model)
            {
                <option value="@programa.Nome">@programa.Nome</option>
            }
        }
    </select>
</div>
<br />

<div class="container">
    <div class="form-group">
        <label for="tempo">Tempo (em segundos):</label>
        <input type="number" id="tempo" name="tempo" class="form-control" min="1" max="120" placeholder="Digite o tempo (1 a 120s)" />
    </div>

    <div class="form-group">
        <label for="potencia">Potência (1 a 10):</label>
        <input type="number" id="potencia" name="potencia" class="form-control" min="1" max="10" placeholder="Digite a potência (1 a 10)" />
    </div>

    <div class="keypad">
        <h4>Teclado Numérico</h4>
        <div class="d-flex flex-wrap">
            @for (int i = 1; i <= 9; i++)
            {
                <button type="button" class="btn btn-secondary m-1" onclick="adicionarNumero(@i)">@i</button>
            }
            <button type="button" class="btn btn-secondary m-1" onclick="adicionarNumero(0)">0</button>
        </div>
    </div>

    <div class="mt-3">
        <button type="button" class="btn btn-success" onclick="iniciar()">Iniciar</button>
        <button type="button" class="btn btn-warning" onclick="pausarCancelar()">Pausar/Cancelar</button>
        <button type="button" class="btn btn-info" onclick="inicioRapido()">Início Rápido</button>
    </div>

    <div class="mt-3">
        <label id="status" class="font-weight-bold text-primary"></label>
    </div>

    <div class="mt-3">
        <h4 style="color: red;">Tempo Restante: <span id="tempoRestante">--</span></h4>
    </div>
</div>

@section scripts {
    <script src="/wwwroot/js/site.js"></script>
}